<div id="home_page">
  <img alt="homepage_masthead" src="http://imgh.us/home_page.png" class="masthead" >
  <div class="main-content">
    <div id="awards">
      <div class="sort_search">
        <div id="sort_field">
          <p>Choose Your Award:</p>
        </div>
        <div id="search_field">
          <%= form_for awards_path, :method => :get do %>
            <%= text_field_tag "keyword", nil, placeholder: 'Search for award...' %>
            <%= button_tag(type: 'submit') do %>
              <i class="fa fa-search" aria-hidden="true"></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row">
          <% @awards.each do |award| %>
            <div class="col-xs-12 col-sm-6 col-md-4">
              <div class="box">
                <%= link_to image_tag(award.profile_img), award_path(award.id) %>
                <h4><%= award.name %></h4>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="show_all">
        <p><%= link_to 'Show All', awards_path %></p>
      </div>
    </div>
  </div>
</div>
