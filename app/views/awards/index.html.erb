<div id="home_page">
  <img alt="homepage_masthead" src="http://imgh.us/home_page.png" class="homepage_masthead" >
  <div class="main-content">
    <div id="awards">
      <div class="sort_search">
        <div id="sort_field">
          <p>Choose Your Award: <br> 
            <span>Sort by Name <%= link_to 'A - Z', awards_path(:order => "name"), class: "btn btn-default btn-xs" %>
            </span> 
          </p>
        </div>
        <div id="search_field">
            <%= form_for awards_path, :method => :get do %>
            <%= text_field_tag "keyword" %>
            <%= submit_tag "Search" %>
            <% end %>
        </div>
      </div>
      <div class="container-fluid">
        <div class="row">
          <% @awards.each do |award| %>
            <div class="col-sm-6 col-md-4">
              <div class="box">
                <%=image_tag(award.profile_img, size: "200x200")%>
                <h4><%= award.name %></h4>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
